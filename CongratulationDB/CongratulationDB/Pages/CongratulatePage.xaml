<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CongratulationDB.Pages.CongratulatePage">
    <ContentPage.Content>
        <ListView x:Name="lv" SeparatorColor="Gray" SelectionMode="None" RowHeight="50" ItemTapped="lv_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label  Text="{Binding Name}" 
                                        FontSize="Large"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </ContentPage.Content>
</ContentPage>